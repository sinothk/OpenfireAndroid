<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/listview_chat_linearlayout_right_prescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/listview_chat_time_textview_right_prescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="2015:04:14 22:57"
                android:textColor="#a9a8a8"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dip"
                    android:layout_weight="5"
                    android:background="@drawable/listview_chat_bg_right_new"
                    android:orientation="vertical"
                    android:paddingBottom="5dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="5dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/pre_dot"
                            android:drawablePadding="5dip"
                            android:gravity="center"
                            android:text="症状分析:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tx_symptom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:text="据捕到鲸鲨的渔民说，捕到这么大的鱼还是第一次"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/pre_dot"
                            android:drawablePadding="5dip"
                            android:text="标签:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tx_tag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:text="据捕到鲸鲨的渔民说，捕到这么大的鱼还是第一次"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/pre_dot"
                            android:drawablePadding="5dip"
                            android:text="禁忌:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tx_taboo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:text="据捕到鲸鲨的渔民说，捕到这么大的鱼还是第一次"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/pre_dot"
                            android:drawablePadding="5dip"
                            android:text="适用:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tx_fit_use"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:text="据捕到鲸鲨的渔民说，捕到这么大的鱼还是第一次"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/pre_dot"
                            android:drawablePadding="5dip"
                            android:text="建议:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tx_suggest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:text="据捕到鲸鲨的渔民说，捕到这么大的鱼还是第一次"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/pre_dot"
                            android:drawablePadding="5dip"
                            android:text="膳食配方:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tx_meals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:text="据捕到鲸鲨的渔民说，捕到这么大的鱼还是第一次"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/pre_dot"
                            android:drawablePadding="5dip"
                            android:text="膳食列表:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tx_goods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:text="据捕到鲸鲨的渔民说，捕到这么大的鱼还是第一次"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tx_look_meals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="相关膳食补充剂"
                        android:textColor="#1ee6be"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="60dip"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/listview_chat_imageview_right_prescription"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_launcher" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>