<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/listview_chat_linearlayout_right_article"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/listview_chat_time_textview_right_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="2015:04:14 22:57"
                android:textColor="#a9a8a8"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dip"
                    android:layout_weight="5"
                    android:background="@drawable/listview_chat_bg_right_new"
                    android:orientation="vertical"
                    android:paddingBottom="5dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="5dip" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/chat_article_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="《" />

                        <TextView
                            android:id="@+id/chat_article_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="》" />

                        <TextView
                            android:id="@+id/listview_chat_article_title_textview_right"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/chat_article_20"
                            android:layout_toRightOf="@id/chat_article_2"
                            android:maxLines="1"
                            android:text="男子苦蹲墙角数天被当贼"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/listview_chat_article_textview_right"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:text="男子苦蹲墙角数天被当贼 民警调查原来只为蹭WIFI"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/listview_chat_article_see_textview_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="2dip"
                        android:text="点击查看全文"
                        android:textColor="#1ee6be"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/listview_chat_imageview_right_article"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_launcher" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>