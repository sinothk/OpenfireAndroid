<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/win_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/userAvatarIv"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg" />

                <ImageView
                    android:id="@+id/userQrCodeIv"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:padding="@dimen/dp_6"
                    android:scaleType="centerCrop"
                    android:src="@drawable/comm_tab_qrcode_yellow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_toEndOf="@+id/userAvatarIv"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_18"
                        tools:text="HenYun IM" />

                    <TextView
                        android:id="@+id/userNameIv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        tools:text="HenYun IM" />
                </LinearLayout>

            </RelativeLayout>

            <include layout="@layout/line_4_part" />

            <LinearLayout
                android:id="@+id/changePwdItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_20"
                    android:text="修改密码"
                    android:textColor="@color/list_title"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <include layout="@layout/line_4_part" />

            <LinearLayout
                android:id="@+id/setOnlineItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_20"
                    android:text="设置在线"
                    android:textColor="@color/list_title"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:id="@+id/setActiveItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_20"
                    android:text="设置Q我吧"
                    android:textColor="@color/list_title"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:id="@+id/setLeaveItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_20"
                    android:text="设置离开"
                    android:textColor="@color/list_title"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:id="@+id/setOffLineItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_20"
                    android:text="设置离线"
                    android:textColor="@color/list_title"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_margin="@dimen/dp_30"
                android:background="@color/theme"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/delCurrAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="#f24444"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="删除当前账号"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>





