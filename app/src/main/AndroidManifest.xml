<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sinothk.openfire.android.demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".view.comm.WelcomeActivity"
            android:theme="@style/AppThemeFull">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.comm.SignInActivity"
            android:label="登录"
            android:theme="@style/AppThemeFull" />

        <activity
            android:name=".view.comm.SignUpActivity"
            android:label="注册"
            android:theme="@style/AppThemeFull" />

        <activity android:name=".MainActivity" />
        <activity android:name=".view.comm.UpdatePwdActivity" />


    </application>

</manifest>